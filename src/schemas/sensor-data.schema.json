{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/schemas/v0.2/sensor-data.schema.json",
  "title": "Sensor Data Payload (v0.2)",
  "type": "object",
  "required": ["timestamp", "device_id", "readings"],
  "properties": {
    "schema_version": { "type": "string", "const": "v0.2" },
    "timestamp": { "type": "string", "format": "date-time" },
    "device_id": { "type": "string" },
    "firmware_version": { "type": "string" },
    "sequence": { "type": "integer", "minimum": 0 },
    "readings": {
      "type": "object",
      "required": ["temperature_C", "humidity"],
      "properties": {
        "temperature_C": { "type": "number" },
        "humidity": { "type": "number" },
        "air_quality": { "type": "number" }
      },
      "additionalProperties": false
    },
    "anomaly": {
      "type": "object",
      "properties": {
        "anomaly_detected": { "type": "boolean" },
        "anomaly_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "reason": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
